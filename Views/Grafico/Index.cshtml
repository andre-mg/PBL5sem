@{
    ViewData["Title"] = "Gráfico de Temperatura x Tensão";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Tensão necessária em função da temperatura</h5>
                </div>
                <div class="card-body">
                    @if (ViewData["GraficoPath"] != null)
                    {
                        <img src="@ViewData["GraficoPath"]" alt="Gráfico de Temperatura x Tensão" class="img-fluid" />
                    }
                    else
                    {
                        <div class="alert alert-warning">Não foi possível gerar o gráfico.</div>
                    }
                </div>
                <div class="card-footer">
                    <p class="text-muted">Gráfico gerado em @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</p>
                </div>
            </div>
        </div>
    </div>
</div>